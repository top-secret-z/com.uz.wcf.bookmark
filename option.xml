<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/2019/option.xsd">
	<import>
		<categories>
			<category name="bookmark">
				<showorder>5</showorder>
			</category>
			
			<category name="bookmark.general">
				<parent>bookmark</parent>
				<showorder>1</showorder>
			</category>
			
			<category name="bookmark.activity">
				<parent>bookmark</parent>
				<showorder>2</showorder>
			</category>
			
			<category name="bookmark.display">
				<parent>bookmark</parent>
				<showorder>3</showorder>
			</category>
			<category name="bookmark.display.control">
				<parent>bookmark.display</parent>
				<showorder>1</showorder>
			</category>
			<category name="bookmark.display.icon">
				<parent>bookmark.display</parent>
				<showorder>2</showorder>
			</category>
			<category name="bookmark.display.sidebar">
				<parent>bookmark.display</parent>
				<showorder>3</showorder>
			</category>
			<category name="bookmark.display.userInformation">
				<parent>bookmark.display</parent>
				<showorder>4</showorder>
			</category>
		</categories>
		
		<options>
			<option name="module_bookmark">
				<categoryname>module.content</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			
			<option name="bookmark_share_enable">
				<categoryname>bookmark.activity</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<enableoptions>bookmark_activity_enable</enableoptions>
			</option>
			
			<option name="bookmark_force_remark">
				<categoryname>bookmark.general</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			
			<option name="bookmark_activity_enable">
				<categoryname>bookmark.activity</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			
			<option name="bookmark_basic_activity_enable">
				<categoryname>bookmark.activity</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			
			<option name="bookmark_display_control">
				<categoryname>bookmark.display.control</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			
			<option name="bookmark_display_icon">
				<categoryname>bookmark.display.icon</categoryname>
				<optiontype>text</optiontype>
				<defaultvalue>bookmark</defaultvalue>
			</option>
			
			<option name="bookmark_display_message_sidebar_bookmarks">
				<categoryname>bookmark.display.sidebar</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="bookmark_display_message_sidebar_bookmarkShares">
				<categoryname>bookmark.display.sidebar</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			
			<option name="bookmark_display_userInformation_bookmarks">
				<categoryname>bookmark.display.userInformation</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
			</option>
			<option name="bookmark_display_userInformation_bookmarkShares">
				<categoryname>bookmark.display.userInformation</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
		</options>
